<Window x:Class="DocumentFlow.ModalWindows.AddContactInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentFlow.ModalWindows"
        mc:Ignorable="d"
        Title="AddContactInfoWindow" Height="200" Width="500">
    <StackPanel>
        <ComboBox  x:Name="InfoCollection"
            Margin="3"
                   FontSize="15"
              
            DisplayMemberPath = "InfoType" SelectionChanged="InfoCollection_SelectionChanged"/>
        <TextBox x:Name="InputValue"
                Margin="3"
                   FontSize="15"/>
        <Button Content="OK"
                Margin="3" Click="OkButton_Click"
                />
        <Button Content="Cancel"
                Margin="3"
                Click="CancelButton_Click"/>
    </StackPanel>
</Window>
