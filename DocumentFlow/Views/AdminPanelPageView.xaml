<UserControl x:Class="DocumentFlow.Views.AdminPanelPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFlow.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>

        <DataTemplate x:Key="UserListItemTemplate">
            <DockPanel>

                <Grid  HorizontalAlignment="Stretch">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.2*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Stretch">

                        <Label FontWeight="Bold"
                               Content="{Binding UserName}" />
                    </StackPanel>


                    <Button  Grid.Column="1" 
                            Margin="1"
                            Command="{Binding DataContext.ChangeUserPasswordCommand, ElementName=This}"
                            CommandParameter="{Binding}">
                        Change password
                    </Button>


                </Grid>

            </DockPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Add new user"
                Margin="5"
                Command="{Binding AddNewUserCommand}" />
            <Button Content="Edit user"
                Margin="5"/>
            <Button Content="Normative information"
                    Command="{Binding NormInfoCommand}"
                Margin="5"/>
            <Button Content="Add news"
                    Command="{Binding AddNewsCommand}"
                Margin="5"/>
            <Button Content="Change my password"                    
                Margin="100,5,5,5"
                    Command="{Binding ChangeMyPassword}"/>
        </StackPanel>
        <ListBox HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch"
                 Margin="3"
                 ItemsSource="{Binding UserList}" 
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"       
                 ItemTemplate="{StaticResource UserListItemTemplate}">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>

        </ListBox>
    </StackPanel>
</UserControl>
