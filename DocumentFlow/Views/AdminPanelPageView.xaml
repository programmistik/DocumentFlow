<UserControl x:Class="DocumentFlow.Views.AdminPanelPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFlow.Views"
             mc:Ignorable="d" 
             x:Name="This"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <local:IsActiveToColorConverter x:Key="IsActiveToColorConverter" />
        <DataTemplate x:Key="UserListItemTemplate">
            <StackPanel>
                
                    
                    <Grid  HorizontalAlignment="Stretch">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="0.2*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" HorizontalAlignment="Stretch">

                        <Label FontWeight="Bold"
                               Content="{Binding}"
                               Foreground="{Binding IsActive, Converter={StaticResource IsActiveToColorConverter}}"/>
                    </StackPanel>


                    <Button  Grid.Column="1" 
                            Margin="1"
                            Command="{Binding DataContext.EditUserCommand, ElementName=This}"
                            CommandParameter="{Binding}">
                        Edit 
                    </Button>


                </Grid>
                <Separator>
                    <Separator.Style>
                        <Style TargetType="Separator">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource PreviousData}}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Separator.Style>
                </Separator>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Add new user"
                Margin="5"
                Command="{Binding AddNewUserCommand}" />
            <!--<Button Content="Edit user"
                Margin="5"/>-->
            <Button Content="Normative information"
                    Command="{Binding NormInfoCommand}"
                Margin="5"/>
            <Button Content="News"
                    Command="{Binding NewsCommand}"
                Margin="5"/>
            <Button Content="Change my password"                    
                Margin="100,5,5,5"
                    Command="{Binding ChangeMyPassword}"/>
            <Button Content="Log off"                    
                Margin="10,5,5,5"
                    Background="DarkRed"
                    Command="{Binding LogOffCommand}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
        <CheckBox IsChecked="{Binding ShowActiveOnly}" 
                  Command="{Binding ShowUsersCommand}"
                  Margin="5"
                      Foreground="DarkViolet"
                      FontWeight="Bold"
                      FontSize="15"
                      Content="Show only active users" />
        <Label Content="🔎" FontSize="15"
               Foreground="DarkViolet"
               Margin="80,0,0,0"/>
        <TextBox Margin="5" 
                     Background="White"
                     Text="{Binding Path=UserFilter, UpdateSourceTrigger=PropertyChanged}"
                     Width="380" />
        </StackPanel>
        <ListBox HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch"
                 Margin="3"
                 BorderThickness="2"
                 BorderBrush="DarkViolet"
                 ItemsSource="{Binding FilteredUsers}" 
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"       
                 ItemTemplate="{StaticResource UserListItemTemplate}" Height="388">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListBox.ItemContainerStyle>

        </ListBox>
    </StackPanel>
</UserControl>
