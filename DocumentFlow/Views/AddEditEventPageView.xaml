<UserControl x:Class="DocumentFlow.Views.AddEditEventPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DocumentFlow.Views"
             mc:Ignorable="d" 
             xmlns:tp="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <Label FontSize="15" 
               Margin="2"
               Content="Name"/>
        <TextBox FontSize="15" 
                 Margin="2"
                 Text="{Binding EventSummary}"/>
        <Label FontSize="15" 
               Margin="2"
               Content="Location"/>
        <TextBox FontSize="15" 
                 Margin="2"
                 Text="{Binding Location}"/>
        <Label FontSize="15" 
               Margin="2"
               Content="Start date:"/>
        <DockPanel>
        <DatePicker
    HorizontalAlignment="Left"
    SelectedDate="{Binding Path=StartDate,
        Mode=TwoWay,
        TargetNullValue={x:Static System:DateTime.Now}}"
    
    VerticalAlignment="Top" 
    Width="120" />
        <tp:TimePicker Height="25" 
                        Width="100" 
                       Margin="10 0"
                       HorizontalAlignment="Left"
                        TimeInterval="00:30:00.000"
                        ShowButtonSpinner="False"
                        Value="{Binding StartDate}"/>
        </DockPanel>
        <Label FontSize="15" 
               Margin="2"
               Content="End date:"/>
        <DockPanel>
        <DatePicker
    HorizontalAlignment="Left"
    SelectedDate="{Binding Path=EndDate,
        Mode=TwoWay,
        TargetNullValue={x:Static System:DateTime.Now}}"
    
    VerticalAlignment="Top" 
    Width="120" />
        <tp:TimePicker Height="25" 
                        Width="100" 
                       Margin="10 0"
                       HorizontalAlignment="Left"
                        TimeInterval="00:30:00.000"
                        ShowButtonSpinner="False"
                        Value="{Binding StartTime}"/>
        </DockPanel>
        <DockPanel>
            <Button Content="Save"
                    Margin="5"
                    Width="300"
                    Command="{Binding SaveEvent}"/>
            <Button Content="Back"
                    Margin="5"
                    Command="{Binding Back}"/>
        </DockPanel>
    </StackPanel>
    
    
</UserControl>
