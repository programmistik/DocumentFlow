<UserControl x:Class="DocumentFlow.Views.LogInPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:b="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" 
             xmlns:local="clr-namespace:DocumentFlow.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>


        <Image Source="{Binding Image}"               
               Height="180"/>

        <Label Margin="200,20,0,0" 
               FontSize="15"
               Content="{Binding lbUserName}"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="233*" />
                <ColumnDefinition Width="24*"/>
                <ColumnDefinition Width="543*"/>
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox 
                     Name="tbUserName" 
                     Margin="200,2,200,0"
                     FontSize="20"
                Text="{Binding LoginUserName, ValidatesOnDataErrors=True, NotifyOnValidationError=True, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="3">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="LostFocus">
                        <b:InvokeCommandAction  Command="{Binding LostFocusCommand}" CommandParameter="{Binding Text, ElementName=tbUserName}"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </TextBox>
            <Label Content="{Binding LoginCheck}"
                   Foreground="{Binding CheckColor}"
                   Margin="343.085,2,0,0" Grid.Column="2"/>
        </Grid>
        <Label Content="{Binding (Validation.Errors)[0].ErrorContent, ElementName=tbUserName}" Foreground="Red" FontSize="12"></Label>

        <Label Margin="200,2,0,0" 
               Content="{Binding lbPassword}"
               FontSize="15"/>
        <PasswordBox Name="pBox" 
                     Margin="200,2,200,0"
                     FontSize="20"
                     />

        <TextBlock Margin="200,2,200,0" 
                   Text="{Binding ForgotPwd}">
            <TextBlock.InputBindings>
                <MouseBinding Command="{Binding ForgotPasswordCommand}" 
                              MouseAction="LeftClick" />
            </TextBlock.InputBindings>
        </TextBlock>
        <StackPanel HorizontalAlignment="Stretch"
                    Orientation="Horizontal">

            <Button Content="{Binding btnLogIn}"
                    HorizontalAlignment="Center"
                    Margin="200,20,20,0"
                    Height="40"
                    Width="180"
                    FontSize="15"
                    Command="{Binding LogInCommand}"
                    CommandParameter="{Binding ElementName=This}"></Button>
        </StackPanel>


    </StackPanel>
</UserControl>
