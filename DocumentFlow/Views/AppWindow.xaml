<Window x:Class="DocumentFlow.Views.AppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentFlow.Views"
        mc:Ignorable="d"
        Name="TheMainView"
        Title="{Binding ApplicationTitle, UpdateSourceTrigger=PropertyChanged}"
        Height="750" Width="1300"
        MinWidth="1100" MinHeight="600" Closing="TheMainView_Closing">

    <Window.Resources>
        <ResourceDictionary Source="../Resources/DataTemplates.xaml"/>
    </Window.Resources>

    <DockPanel>
        <ContentControl Content="{Binding CurrentPage}"/>
    </DockPanel>
</Window>
