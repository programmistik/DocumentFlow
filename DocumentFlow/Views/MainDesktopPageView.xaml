                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <hx:HexGrid Grid.Row="0" Grid.Column="0"
                            RowCount="3" ColumnCount="3" Orientation="Horizontal" Grid.ColumnSpan="4" Grid.RowSpan="3">
                <hx:HexItem Grid.Row="0" Grid.Column="1">
                    <StackPanel Name="Calendar">
                        <Image Source="../Resources/Images/Calendar.png" Width="60" />
                        <TextBlock Text="{x:Static p:Resources.OpenCalendar}" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    </StackPanel>
                </hx:HexItem>

                <hx:HexItem Grid.Row="1" Grid.Column="0">
                    <StackPanel Name="Mail">
                        <Image Source="../Resources/Images/Mail.png" Width="60" />
                        <TextBlock Text="{x:Static p:Resources.Mail}" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    </StackPanel>
                </hx:HexItem>
                <hx:HexItem Grid.Row="1" Grid.Column="1" Background="BlueViolet">
                    <StackPanel Name="News">
                        <Image Source="../Resources/Images/News.png" Width="60" />
                        <TextBlock Text="{x:Static p:Resources.News}" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    </StackPanel>
                </hx:HexItem>
                <hx:HexItem Grid.Row="1" Grid.Column="2">
                    <StackPanel Name="Schedule">
                        <Image Source="../Resources/Images/Tasks.png" Width="60" Margin="0,0,0,5" />
                        <TextBlock Text="{x:Static p:Resources.Schedule}" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    </StackPanel>
                </hx:HexItem>

                <hx:HexItem Grid.Row="2" Grid.Column="0">
                    <StackPanel Name="Documents">
                        <Image Source="../Resources/Images/Documents.png" Width="60" Margin="0,0,0,5" />
                        <TextBlock Text="{x:Static p:Resources.Documents}" HorizontalAlignment="Center" FontSize="16"></TextBlock>
                    </StackPanel>
                </hx:HexItem>
                <hx:HexItem Grid.Row="2" Grid.Column="1">
                    <StackPanel Name="Contacts">
                        <Image Source="../Resources/Images/Contacts.png" Width="60" Margin="0,0,0,5" />
                        <TextBlock Text="{x:Static p:Resources.Contacts}" HorizontalAlignment="Center" FontSize="16" ></TextBlock>
                    </StackPanel>
                </hx:HexItem>
                <hx:HexItem Grid.Row="2" Grid.Column="2" Content="Will be added soon..."/>
            </hx:HexGrid>

        </Grid>

